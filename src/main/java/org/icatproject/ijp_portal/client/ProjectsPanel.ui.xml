<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:c='urn:import:com.google.gwt.user.cellview.client'
			 xmlns:d='urn:import:com.google.gwt.user.datepicker.client' >

	<ui:style src="portal.css" />
	<!--ui:style>
		.bolder { font-weight: bold; }
		.red { color: #FF0000; }
	</ui:style-->
	
	<g:VerticalPanel spacing='10'>
		<g:HorizontalPanel>
			<g:ListBox ui:field="usersListBox" multipleSelect='true' visibleItemCount='3' />
			<g:ListBox ui:field="instrumentsListBox" multipleSelect='true' visibleItemCount='3' />
			<g:ListBox ui:field="exptTypesListBox" multipleSelect='true' visibleItemCount='3' />
			<g:ListBox ui:field="numChannelsListBox" multipleSelect='true' visibleItemCount='3' />
			<g:Button ui:field="searchButton" text='Search' />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="genericParamSearchPanel">
			<g:ListBox ui:field="paramSelectListBox" />
			<g:ListBox ui:field="operatorSelectListBox" />
			<g:DoubleBox ui:field="paramValueTextBox" />
			<g:DoubleBox ui:field="paramValueDoubleBox" />
			<g:DoubleBox ui:field="fromValueDoubleBox" />
			<g:DoubleBox ui:field="toValueDoubleBox" />
			<d:DateBox ui:field="fromDateBox" />
			<d:DateBox ui:field="toDateBox" />
		</g:HorizontalPanel>
		<g:HorizontalPanel width='100%'>
			<g:cell width='20%' horizontalAlignment='ALIGN_LEFT'>
				<g:Label ui:field='messageLabel' height='20px' styleName='{style.red}'></g:Label>
			</g:cell>
			<g:cell width='30%' horizontalAlignment='ALIGN_RIGHT'>
				<g:ListBox ui:field="datasetActionListBox" width='300px'/>
			</g:cell>
			<g:cell width='30%' horizontalAlignment='ALIGN_RIGHT'>
				<g:Button ui:field="datasetInfoButton" text='Show dataset info' />
			</g:cell>
			<g:cell width='20%' horizontalAlignment='ALIGN_RIGHT'>
				<g:Button ui:field="submitDatasetButton" text='Process selected dataset' />
			</g:cell>
		</g:HorizontalPanel>
		<!-- g:HTMLPanel><hr /></g:HTMLPanel-->
		<g:ScrollPanel ui:field='projectsScrollPanel' height='300px' styleName='{style.scroll-panel}'>
			<c:CellTable ui:field='projectsTable' width='100%'/>
		</g:ScrollPanel>
	   	<!-- g:Label styleName='{style.bolder}'>Project information</g:Label-->
		<!-- g:HTMLPanel><hr /></g:HTMLPanel-->
	   	<!-- g:HTMLPanel>&nbsp;&nbsp;&nbsp;&nbsp;<b>Information</b></g:HTMLPanel-->
		<g:ScrollPanel ui:field='infoScrollPanel' height='300px' styleName='{style.scroll-panel}'>
			<c:CellTable ui:field='projectInfoTable' width='100%' />
		</g:ScrollPanel>
        <g:FormPanel ui:field="rdpForm">
            <g:VerticalPanel>
                <g:Hidden name="accountName" ui:field="accountNameField" />
                <g:Hidden name="hostName" ui:field="hostNameField" />
            </g:VerticalPanel>
        </g:FormPanel>
        <g:FormPanel ui:field="downloadForm">
            <g:VerticalPanel>
                <g:Hidden name="sessionId" ui:field="sessionIdField" />
                <g:Hidden name="datasetId" ui:field="datasetIdField" />
                <g:Hidden name="datasetName" ui:field="datasetNameField" />
            </g:VerticalPanel>
        </g:FormPanel>
		
	</g:VerticalPanel>
</ui:UiBinder>