<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='res' type='org.icatproject.ijp.client.IjpResources' />

    <g:HTMLPanel>
        <g:Label ui:field="messageLabel" addStyleNames='{res.css.errorMessage}'></g:Label>
        <g:HorizontalPanel>
            <g:Label>Authenticator</g:Label>
            <g:ListBox ui:field="authnList" title="Please specify the authentication method to use"></g:ListBox>
        </g:HorizontalPanel>
        <g:FlexTable ui:field="credentials">
        </g:FlexTable>
        <g:Button ui:field="login">Login</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>