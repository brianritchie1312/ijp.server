<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style src="portal.css" />
        
    <g:VerticalPanel spacing='5' width='100%' height='100%'>
        <g:HorizontalPanel width='100%'>
            <g:cell width='8%' horizontalAlignment='ALIGN_LEFT'>
              <g:Label styleName="{style.important}" ui:field="titleLabel" />
            </g:cell>
        </g:HorizontalPanel>
        <g:ScrollPanel ui:field='selectionTableHolder' width='100%' styleName='{style.selectionTable}'/>
        <g:HorizontalPanel width='100%'>
            <g:HorizontalPanel width='50%' horizontalAlignment='ALIGN_LEFT'>
	            <g:cell horizontalAlignment='ALIGN_LEFT'>
	                <g:Button ui:field="removeSelectedButton" text="Remove Selected" />
	            </g:cell>
	            <g:cell horizontalAlignment='ALIGN_LEFT'>
	                <g:Button ui:field="removeAllButton" text="Remove All" />
	            </g:cell>
            </g:HorizontalPanel>
            <g:HorizontalPanel width='50%' horizontalAlignment='ALIGN_RIGHT'>
                <g:Button ui:field="acceptButton" />
                <g:Button ui:field="cancelButton" />
                <!--  What if we don't use cells for the buttons?
	            <g:cell width='30%' horizontalAlignment='ALIGN_RIGHT'>
	                <g:Button ui:field="acceptButton" />
	            </g:cell>
	            <g:cell width='30%' horizontalAlignment='ALIGN_RIGHT'>
	                <g:Button ui:field="cancelButton" />
	            </g:cell>
	            -->
            </g:HorizontalPanel>
        </g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 